# Database Configuration
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Server Configuration
PORT=8080
ENV=production

# Database Pool Configuration
DB_MAX_CONNECTIONS=25
DB_MAX_IDLE_CONNECTIONS=5
DB_MAX_LIFETIME_MINUTES=5

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRY_HOURS=24

# Scheduler Configuration
# Intervalo em horas entre execuções das tarefas automáticas
# Tarefas: marcar pagamentos atrasados, verificar contratos expirando
# Valores recomendados: 24 (1x ao dia), 12 (2x ao dia), 6 (4x ao dia)
SCHEDULER_INTERVAL_HOURS=24
